@using webProjekat.Models
@model IEnumerable<User>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    form {
        display: inline;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type="text"],
    input[type="number"] {
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    h3 {
        margin-bottom: 8px;
    }

    p {
        margin-top: 16px;
    }
</style>

<table border="1">
    <tr>
        <th colspan="8">Users</th>
    </tr>
    <tr>
        <th>Username</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Date of birth</th>
        <th>Email</th>
        <th>Role</th>
        <th>Change</th>
        <th>Delete</th>
    </tr>

    @foreach(User u in Model)
    {
        if(!u.Deleted)
        {
            <tr>
                <td>@u.Username</td>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.Birthday.ToString("yyyy-MM-dd")</td>
                <td>@u.Email</td>
                <td>@u.Role.ToString()</td>
                <td>
                    <form action="~/Administrator/ChangeSeller" method="post">
                        <input type="text" name="username" hidden value="@u.Username"/>
                        <input type="submit" value="Change"/>
                    </form>
                </td>
                <td>
                    <form action="~/Administrator/Delete" method="post">
                        <input type="text" name="username" hidden value="@u.Username"/>
                        <input type="submit" value="Delete"/>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<br/>
<table>
    <tr>
        <td>
            <h3>Search</h3>
            <form action="~/Administrator/SearchUsers">
                <table>
                    <tr>
                        <td>First name:</td>
                        <td><input type="text" name="firstName" /></td>
                    </tr>
                    <tr>
                        <td>Last name:</td>
                        <td><input type="text" name="lastName" /></td>
                    </tr>
                    <tr>
                        <td>Date of birth from:</td>
                        <td><input type="date" name="birthdayFrom" /></td>
                        <td>Date of birth to:</td>
                        <td><input type="date" name="birthdayTo" /></td>
                    </tr>
                    <tr>
                        <td>Role:</td>
                        <td>
                            <select name="role">
                                <option value=""></option>
                                <option value="Seller">Seller</option>
                                <option value="Customer">Customer</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="Search" /></td>
                    </tr>
                </table>
            </form>
        </td>
        <td>
            <h3>Sort</h3>
<form action="~/Administrator/SortUsers" method="post">
    <table>
        <tr>
            <td>By:</td>
            <td>
                <select name="by">
                    <option value="FirstName">First name</option>
                    <option value="Birthday">Birthday</option>
                    <option value="Role">Role</option>
                </select>
                <br />
            </td>
        </tr>
        <tr>
            <td>Type</td>
            <td>
                <select name="type">
                    <option value="Ascending">Ascending</option>
                    <option value="Descending">Descending</option>
                </select>
                <br />
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Sort" /></td>
        </tr>
    </table>
</form>
        </td>
    </tr>
</table>

