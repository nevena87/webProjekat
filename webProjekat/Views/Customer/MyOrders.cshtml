@using webProjekat.Models
@model IEnumerable<Order>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    form {
        display: inline;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type="text"],
    input[type="number"] {
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    h3 {
        margin-bottom: 8px;
    }

    p {
        margin-top: 16px;
    }
</style>

<table border="1">
    <tr>
        <th colspan="8">Orders</th>
    </tr>
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Order date</th>
        <th>Status</th>
        <th>Execute</th>
        <th>Cancel</th>
        <th>Add review</th>
    </tr>

    @foreach (Order o in Model)
    {
        <tr>
            <td>@o.Product</td>
            <td>@o.Quantity</td>
            <td>@o.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@o.Status.ToString()</td>
            <td>
                @if (o.Status == Status.Active)
                {
                    <form action="~/Customer/ExecuteOrder" method="post">
                        <input type="hidden" name="name" value="@o.Product" />
                        <input type="submit" value="Execute"/>
                    </form>
                }
            </td>
            <td>
                @if (o.Status == Status.Active)
                 {
                    <form action="~/Customer/CancelOrder" method="post">
                        <input type="hidden" name="name" value="@o.Product" />
                        <input type="submit" value="Cancel" />
                    </form>
                 }
            </td>
            <td>
                @if(o.Status == Status.Executed)
                {
                    <form action="~/Customer/AddReview" method="post">
                        <input type="hidden" name="name" value="@o.Product"/>
                        <input type="submit" value="Add"/>
                    </form>
                }
            </td>
        </tr>
     }
</table>