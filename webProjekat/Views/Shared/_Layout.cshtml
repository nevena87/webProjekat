@using webProjekat.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web store</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <table>
                    <tr>
                        <td><form action="~/Home/AllProducts"><input type="submit" value="Home" /></form></td>

                        @if ((User)Session["user"] == null)
                        {
                            <td><form action="~/Home/Registration"><input type="submit" value="Registration" /></form></td>
                            <td><form action="~/Home/Index"><input type="submit" value="Log in" /></form></td>
                        }
                        else
                        {
                            <td><form action="~/Home/Logout"><input type="submit" value="Log out" /></form></td>
                            <td><form action="~/Customer/MyProfile"><input type="submit" value="Profile information" /></form></td>
                            if (((User)Session["user"]).Role == Role.Customer)
                            {
                                <td><form action="~/Customer/Favorites"><input type="submit" value="Favorites" /></form></td>
                                <td><form action="~/Customer/MyOrders"><input type="submit" value="My Orders" /></form></td>

                            }
                            else if (((User)Session["user"]).Role == Role.Seller)
                            {
                                <td><form action="~/Seller/MyProducts"><input type="submit" value="My Products" /></form></td>
                            }
                            else if (((User)Session["user"]).Role == Role.Administrator)
                            {
                                <td><form action="~/Administrator/Users"><input type="submit" value="Users" /></form></td>
                                <td><form action="~/Administrator/Products"><input type="submit" value="Products" /></form></td>
                                <td><form action="~/Administrator/Orders"><input type="submit" value="Orders" /></form></td>
                                <td><form action="~/Administrator/Reviews"><input type="submit" value="Reviews" /></form></td>

                            }
                        }

                    </tr>
                </table>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer> 
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

</body>
</html>